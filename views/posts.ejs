<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
</head>
<body>
    <div class="d-flex">
        <%-include("./partials/sidebar.ejs")%>
        <div class="container">
            <div class="d-flex flex-column justify-content-center align-items-center p-4 text-center" style="height: 100vh;">
                <div class="d-flex flex-grow-1">
                    <div>
                        <h1>Postari</h1>
                        <h2>Vrei sa adaugi o postare? Apasa <a href="/adaugare"> aici </a></h2>
                        <ul>
                            <% posts.forEach(postare => { %>
                                <li>
                                    <h2><%= postare.title %></h2>
                                    <p><%= postare.descriere %></p>
                                    <h3><a href="/edit/<%= postare.id%>">Editeaza postare</a> <a href="/sterge/<%= postare.id%>">Sterge postare</a></h3>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
                <%- include("./partials/footer.ejs") %>
            </div>
        </div>
    </div>
</body>
</html>